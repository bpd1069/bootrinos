#!/usr/bin/env sh
# don't crash out if there is an error
set +xe

determine_if_sudo_available()
{
SUDO=''
if [ -x "$(command -v ${SUDO})" ]; then
  SUDO=$(command -v ${SUDO})
fi
}
determine_if_sudo_available

${SUDO} apk update
echo adding nginx package >> /var/log/start.log
${SUDO} apk add nginx
echo enable nginx at boot >> /var/log/start.log
${SUDO} rc-update add nginx
echo starting nginx >> /var/log/start.log
${SUDO} rc-service nginx start

